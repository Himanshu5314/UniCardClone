<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:animateLayoutChanges="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="740dp"/>
                <ImageView
                    android:id="@+id/topLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/fb_logo2"/>
                <ImageView
                    android:id="@+id/rightLogo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:padding="6dp"
                    android:src="@drawable/three_lines"/>
                
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandCl"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@+id/topLogo"
                    android:background="#70000000"
                    android:visibility="gone"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="@font/fabrica"
                        android:text="Uni Paycheck"
                        android:layout_marginStart="20dp"/>

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginEnd="20dp"
                        tools:visibility="visible"
                        android:src="@drawable/arrow"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
                
                <ImageView
                    android:id="@+id/mainBanner"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@+id/topLogo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/cartoon"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/mainBanner"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/fabrica"
                    android:text="1% cashback &#9734; 5x Rewards &#9734; Zero forex markup"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/title" />

                <TextView
                    android:id="@+id/belowVideoTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/video_view"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingEnd="100dp"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <ImageView
                    android:id="@+id/belowBanner1"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@+id/belowVideoTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="100dp"
                    android:src="@drawable/cartoon"/>

                <TextView
                    android:id="@+id/belowVideoTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/belowBanner1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingEnd="60dp"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <ImageView
                    android:id="@+id/belowBanner2"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@+id/belowVideoTitle2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/cartoon"/>

                <TextView
                    android:id="@+id/belowVideoTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/belowBanner2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingEnd="60dp"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <ImageView
                    android:id="@+id/belowBanner3"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toBottomOf="@+id/belowVideoTitle3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/cartoon"/>

                <TextView
                    android:id="@+id/belowVideoTitle4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/belowBanner3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:paddingEnd="60dp"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <TextView
                    android:id="@+id/belowVideoTitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/belowVideoTitle4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="60dp"
                    android:paddingEnd="60dp"
                    android:lineSpacingExtra="10sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:layout_marginTop="60dp"
                    android:paddingVertical="80dp"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/belowVideoTitle5">

                    <TextView
                        android:id="@+id/blackTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fabrica"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile_image"/>

                    <TextView
                        android:id="@+id/blackTitle2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fabrica"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile_image"/>

                    <TextView
                        android:id="@+id/blackTitle3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fabrica"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile_image"
                        android:textColor="@color/white"/>


                    <TextView
                        android:id="@+id/blackTitle4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fabrica"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mobile_image"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>
        
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardUseCompatPadding="true"
            android:theme="@style/Theme.MaterialComponents.Light"
            android:elevation="20dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="#FFDB58"
            android:layout_margin="20dp">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textColor="@color/black"
                    android:fontFamily="@font/fabrica"
                    android:textSize="14sp"
                    android:text="Uni Paycheck"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:padding="2dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/black"
                    tools:visibility="visible"
                    android:src="@drawable/arrow_black"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>
        
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>